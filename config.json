{
  "LogLevel":"INFO",
  "storepath": "/home/pi/picam2",

  "camera": {
  "index":0,
  "hflip":1,
  "vflip":1,
  "sensitivity": 10,
  "tuning":"/usr/share/libcamera/ipa/rpi/vc4/imx708.json"
  },

  "timestamp": {
   "enabled":true,
   "format": "%A %d.%b %Y - %X",
   "color" : "[255, 255, 0]",
   "origin" : "[0, 45]",
   "font" : "FONT_HERSHEY_TRIPLEX",
   "fscale" : 2,
   "thickness" : 2
  },

  "image": {
	"prefix":"snap",
	"fmt": "jpg",
	"size": "[4056, 3040]"
  },

  "video": {
	"prefix": "videosnap",
	"bitrate": 1000000,
	"size" : "[ 1920, 1080]",
	"quality" : "HIGH",
	"audio":true,

    "streaming": {
        "udp_addr": "localhost",
        "udp_port": 10001,
        "http_port": 8010,
        "http_index":"www/index.html"
	}
  },

    "MQTTBroker":{
	"host":"localhost",
	"port": 1883,
	"//port": 8883,
	"username":"brokerUserName",
	"password":"brokerPassWD",
	"servercafile":"",
	"//servercafile":"./ca.crt",
	"clientkeyfile":"",
	"//clientkeyfile":"./client.key",
	"clientcertfile":".",
	"//clientcertfile":"./client.crt"
  },

  "SSHClient":{
        "enabled":false,
        "server": "<SSH Server e.g. HASS>",
        "user" : "<USERNAME>",
        "dest_path" : "/opt/homeassistant/config/tmp"
  },

  "PanTilt":{
     "active":"None",
     "//active":"WAVESHARE_HAT",
     "///active":"ULN2003",
     "speed":"MEDIUM",
      "Pan":{
          "angle_max":80,
          "angle_min":-80,
          "flip":true
      },
      "Tilt":{
          "angle_low":-26,
          "angle_high":60,
          "flip":false
      },
	"None":{
		"//":"PanTilt is disabled"
		},

      "ULN2003":{
		"Pan_enabled":true,
		"Tilt_enabled":false,
		"check":true,
		"Pan_GPIO_PinA": 27,
		"Pan_GPIO_PinB": 22,
		"Pan_GPIO_PinC": 23,
		"Pan_GPIO_PinD": 24,

		"Tilt_GPIO_PinA": 13,
		"Tilt_GPIO_PinB": 15,
		"Tilt_GPIO_PinC": 16,
		"Tilt_GPIO_PinD": 18
	},

	"WAVESHARE_HAT":{
                       "sensorRefresh":60
			}

  }

}

